{
  "name": "Void Linux",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "remoteUser": "codespace",

  "onCreateCommand": {
    "setup": "bash -c 'echo \"Void Linux Codespace\" && whoami && pwd'"
  },

  "postCreateCommand": "echo 'Setup complete!'",

  "customizations":  {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile. linux": "bash",
        "terminal.integrated.profiles.linux":  {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"],
            "icon": "terminal-bash"
          }
        },
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/*/**": true
        }
      }
    }
  },

  "remoteEnv": {
    "SHELL": "/bin/bash",
    "TERM": "xterm-256color"
  },

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  "capAdd": [],

  // init process
  "init": true,

  "containerEnv": {
    "USER": "codespace"
  }
}
