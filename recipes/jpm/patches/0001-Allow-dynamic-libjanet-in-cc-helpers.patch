+# On conda-forge builds we ship libjanet only as a shared library.
+# Fall back to .dylib/.so whenever the configured :statext (usually .a)
+# is missing so quickbin/native builds remain usable.
+(defn libjanet-link-path
+  []
+  (def libpath (dyn:libpath))
+  (def statext (dyn:statext))
+  (def primary (last (string/split "." statext)))
+  (def extensions
+    (if (string/has-suffix? ".a" statext)
+      # Prefer static libs when available, otherwise try platform shared libs.
+      [primary "dylib" "so"]
+      [primary]))
+  (var found nil)
+  (loop [ext :in extensions :when (nil? found)]
+    (def candidate (string libpath "/libjanet." ext))
+    (when (os/stat candidate :mode)
+      (set found candidate)))
+  (or found (string libpath "/libjanet." primary)))
