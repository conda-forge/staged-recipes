{
  "$schema": "https://schemas.conda.org/menuinst/menuinst-1-1-3.schema.json",
  "menu_name": "Alacritty",
  "menu_items": [
    {
      "name": "Alacritty",
      "description": "A cross-platform, OpenGL terminal emulator.",
      "icon": "{{ MENU_DIR }}/alacritty.{{ ICON_EXT }}",
      "command": [
        ""
      ],
      "platforms": {
        "osx": {
          "command": [
            "{{ MENU_ITEM_LOCATION }}/Contents/MacOS/alacritty-cli"
          ],
          "link_in_bundle": {
            "{{ BIN_DIR }}/alacritty": "{{ MENU_ITEM_LOCATION }}/Contents/MacOS/alacritty-cli"
          },
          "CFBundleIdentifier": "org.alacritty",
          "CFBundleVersion": "__PKG_VERSION__",
          "NSSupportsAutomaticGraphicsSwitching": true,
          "info_plist_extra": {
            "NSRequiresAquaSystemAppearance": "NO",
            "NSHighResolutionCapable": true
          }
        },
        "linux": {
          "command": [
            "{{ BIN_DIR }}/alacritty"
          ],
          "Categories": [
            "TerminalEmulator",
            "System"
          ],
          "GenericName": "Terminal",
          "StartupNotify": true,
          "StartupWMClass": "Alacritty"
        },
        "win": {
          "command": [
            "{{ BIN_DIR }}/alacritty"
          ],
          "desktop": true
        }
      }
    }
  ]
}