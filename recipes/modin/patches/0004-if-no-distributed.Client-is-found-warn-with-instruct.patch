Subject: [PATCH 4/4] if no distributed.Client is found, warn (with
 instructions to set one up)

---
 modin/pandas/__init__.py | 5 +++++
 1 file changed, 5 insertions(+)

diff --git a/modin/pandas/__init__.py b/modin/pandas/__init__.py
index b2abd0a..bd669f8 100644
--- a/modin/pandas/__init__.py
+++ b/modin/pandas/__init__.py
@@ -229,11 +229,16 @@ elif execution_engine == "Dask":  # pragma: no cover
         try:
             client = get_client()
         except ValueError:
+            warnings.warn("""
+            Did not find existing dask-distributed client. You can set
+            one up as follows (before importing modin.pandas):
+
             from distributed import Client
             import multiprocessing
 
             num_cpus = multiprocessing.cpu_count()
             client = Client(n_workers=num_cpus)
+            """)
 elif execution_engine != "Python":
     raise ImportError("Unrecognized execution engine: {}.".format(execution_engine))
 
