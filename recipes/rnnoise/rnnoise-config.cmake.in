# RNNoise Package Configuration File
# This file provides find_package() support for RNNoise library

@PACKAGE_INIT@

# Check if the targets are already imported
if(NOT TARGET rnnoise::rnnoise)
    # Include the targets file
    include("${CMAKE_CURRENT_LIST_DIR}/rnnoise-targets.cmake")
endif()

# Set the variables that find_package expects
set(rnnoise_FOUND TRUE)
set(rnnoise_VERSION @PROJECT_VERSION@)
set(rnnoise_VERSION_STRING @PROJECT_VERSION@)

# Provide the library target as a convenience variable
set(rnnoise_LIBRARIES rnnoise::rnnoise)

# Provide include directories (for legacy usage)
get_target_property(rnnoise_INCLUDE_DIRS rnnoise::rnnoise INTERFACE_INCLUDE_DIRECTORIES)

# Success message
if(NOT rnnoise_FIND_QUIETLY)
    message(STATUS "Found RNNoise: ${rnnoise_VERSION}")
endif()

# Check if all required components are available
check_required_components(rnnoise)
