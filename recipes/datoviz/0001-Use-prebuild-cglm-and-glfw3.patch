diff --git a/CMakeLists.txt b/CMakeLists.txt
index 40424c81..25490ef9 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -39,25 +39,8 @@ set(CMAKE_BUILD_TYPE Debug)
 # Dependencies
 # -------------------------------------------------------------------------------------------------
 
